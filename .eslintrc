{
    "root": true,
    "env": {
        "browser": true,
        "es2021": true,
        "node": true // 开启 node支持，在主进程中，会提示eslint报错
    },
    "extends": [
        "eslint:recommended",
        "plugin:@typescript-eslint/recommended",
        "plugin:prettier/recommended"
    ],
    "parser": "@typescript-eslint/parser",
    "parserOptions": {
        "ecmaFeatures": {
            "jsx": true
        },
        "ecmaVersion": 12,
        "sourceType": "module"
    },
    "plugins": ["@typescript-eslint", "prettier"],
    "rules": {
        "prettier/prettier": "error"
    },
    "ignorePatterns": [
        "bundle",
        "example",
        "node_modules",
        "rollup.config.cjs",
        "rollup.util.config.cjs",
        "node_modules"
    ]
}
